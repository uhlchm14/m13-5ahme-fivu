{
  "version": "2.0.0",
  "tasks": [
    {
      "taskName": "build",
      "command": "gulp",
      // "isShellCommand": true,
      "args": [
        "--gulpfile",
        "server/gulpfile.js",
        "build"
      ],
      // "isBuildCommand": true,
      // "showOutput": "silent",
      "problemMatcher": [
        {
          "owner": "gulp-typescript",
          "fileLocation": [
            "relative",
            "${workspaceRoot}"
          ],
          "pattern": {
            "regexp": "(.*)\\((\\d*),(\\d*)\\): (error|warning) (.*)",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
          }
        }
      ]
    },
    {
      "taskName": "clean",
      "command": "gulp",
      // "isShellCommand": true,
      // "isBuildCommand": true,
      // "showOutput": "silent",
      "args": [
        "--gulpfile",
        "server/gulpfile.js",
        "clean"
      ]
    },
    {
      "taskName": "cleanAndBuild",
      "command": "gulp",
      // "isShellCommand": true,
      "args": [
        "--gulpfile",
        "server/gulpfile.js",
        "cleanAndBuild"
      ],
      // "isBuildCommand": true,
      // "showOutput": "silent",
      "problemMatcher": [
        "$tsc-watch"
      ]
    }
  ]
}

